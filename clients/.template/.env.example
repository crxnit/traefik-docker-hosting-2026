# =============================================================================
# Client Environment Configuration
# =============================================================================
# Copy this file to .env and customize values
# NEVER commit the actual .env file to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Client Identity
# -----------------------------------------------------------------------------
# Unique short name for the client (lowercase, alphanumeric, hyphens)
CLIENT_NAME=my-client

# Public domain for the application
CLIENT_DOMAIN=app.example.com

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Docker image for the web application
APP_IMAGE=node:22-alpine

# Internal port the application listens on
APP_PORT=8080

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Database name (auto-generated from CLIENT_NAME if not set)
POSTGRES_DB=my_client_db

# Database credentials (use secrets in production!)
# These are fallbacks if secrets files don't exist
POSTGRES_USER=app_user
POSTGRES_PASSWORD=CHANGE_ME_USE_SECRETS_INSTEAD

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable Redis cache (set to "true" to enable)
ENABLE_REDIS=false

# Enable debug mode (set to "false" in production)
DEBUG=false
